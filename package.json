{
  "name": "socked",
  "version": "1.0.5",
  "description": "Lightweight WebSocket client & server wrapper with reconnects, events, acks, and dev tools.",
  "main": "dist/index.cjs.js",
  "module": "dist/client.esm.js",
  "type": "module",
  "unpkg": "dist/client.umd.min.js",
  "browser": "dist/client.umd.min.js",
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.cjs.js"
    },
    "./client": {
      "import": "./dist/client.esm.js",
      "require": "./dist/client.cjs.js"
    },
    "./server": {
      "import": "./dist/server.esm.js",
      "require": "./dist/server.cjs.js"
    }
  },
  "scripts": {
    "build": "rollup -c"
  },
  "keywords": [
    "websocket",
    "realtime",
    "socket",
    "client-server",
    "websocket-wrapper",
    "ws",
    "event-based",
    "acknowledgment",
    "reconnect",
    "javascript",
    "frontend",
    "nodejs",
    "utility",
    "open-source"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "ws": "^8.18.2"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.3",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "rollup": "^4.42.0",
    "rollup-plugin-dts": "^6.2.1"
  }
}
